= form_tag :action => "add_keyword", :id => what.id do |f|
  .input-group
    = text_field_tag :keyword, nil, class: "form-control", id: "keywords", placeholder: "Keyword"
    = button_tag(type: 'submit', class: "btn btn-default pull-right") do
      = content_tag(:strong, 'Save Keywords')
  %p
    %small Separate keywords by comma.
:javascript
$(document).ready(function() {
  $('#keywords').selectize({
      delimiter: ',',
      persist: false,
      valueField: 'name',
      labelField: 'name',
      searchField: 'name',
      options: [],
      create: true,
      render: {
        option: function(item, escape) {
          return '<p>' +
          escape(item.name) + 
          '</p>';
          }
        },
      load: function(query, callback) {
        console.log("load function");
          if (!query.length) return callback();
          $.ajax({
              url: "#{keyword_tokens_path}.json",
              type: 'GET',
              dataType: 'json',
              data: {
                  q: query,
              },
              error: function(res) {
                  console.log("error");
                  console.log(res);
                  callback();
              },
              success: function(res) {
                  console.log("success");
                  console.log(res);
                  callback(res.keywords);
              }
          });
      }
  });
});
